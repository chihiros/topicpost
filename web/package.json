{
  "name": "web",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "// build": "remix vite:build",
    "build": "npm run generate; remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "dev:css": "tailwindcss -w -i ./app/tailwind.css -o ./app/tailwind.generated.css",
    "cp": "cp -r ../docs/openapi ./app/services/openapi",
    "rm": "rm -rf ./app/services/openapi/openapi",
    "ogen": "openapi-generator-cli generate -i app/services/openapi/openapi/openapi.yml -g typescript-axios --additional-properties supportsES6=true,withInterfaces=true -o app/services/openapi/generated/",
    "generate": "npm run cp; npm run ogen; npm run rm;",
    "cpenv": "cp .env.example .env; cat .env.supabase.local >> .env",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@remix-run/node": "^2.15.1",
    "@remix-run/react": "^2.15.1",
    "@remix-run/serve": "^2.15.1",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.48.1",
    "@tailwindcss/typography": "^0.5.16",
    "@twemoji/api": "^15.1.0",
    "@twemoji/parser": "^15.1.1",
    "axios": "^1.7.9",
    "cross-env": "^7.0.3",
    "framer-motion": "^12.23.12",
    "isbot": "^4.4.0",
    "marked": "^16.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-markdown": "^10.1.0",
    "react-toastify": "^10.0.6",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.15.3",
    "@remix-run/dev": "^2.15.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/twemoji-parser": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.18.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "20.x"
  }
}
