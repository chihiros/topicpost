# Claude Code用のエイリアス・関数

# Claude Dockerの起動とログイン確認
claude-docker() {
    echo "🚀 Claude Docker起動中..."
    
    # Container起動
    docker-compose -f docker-compose.claude.yml up -d
    
    # 認証確認して必要に応じてログイン
    ./scripts/claude-auto-setup.sh
    
    # 直接Claudeに接続
    echo "🤖 Claude Code起動中..."
    docker-compose -f docker-compose.claude.yml exec claude-code bash -c "claude"
}

# Claude Dockerに直接接続（認証済み前提）
claude-shell() {
    docker-compose -f docker-compose.claude.yml exec claude-code bash
}

# Claude Docker完全セットアップ（初回用）
claude-init() {
    echo "🔧 Claude Docker初期セットアップ..."
    docker-compose -f docker-compose.claude.yml down || true
    docker-compose -f docker-compose.claude.yml up -d --build
    ./scripts/claude-auto-setup.sh
}

# Claude Docker自動起動モード
claude-auto() {
    echo "🤖 Claude自動起動モードで起動中..."
    AUTO_CLAUDE=true docker-compose -f docker-compose.claude.yml up -d
    echo "✅ Container起動完了！Claude Codeが自動で起動されています"
    docker-compose -f docker-compose.claude.yml logs -f claude-code
}